<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:background="@color/DarkLightGray">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp"
        android:layout_marginBottom="15dp"
        android:background="@drawable/custom_block_notification">

        <ImageView
            android:id="@+id/image_type_notification"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_gravity="center_horizontal|center_vertical"
            tools:ignore="ContentDescription"
            android:cropToPadding="true"
            android:scaleType="centerCrop"
            android:adjustViewBounds="true"
            android:background="@drawable/custom_type_image_notification"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/title_notification"
                android:layout_width="match_parent"
                android:layout_height="27.5dp"
                android:gravity="start|bottom"
                android:layout_margin="5dp"
                android:paddingStart="5dp"
                android:text="Заголовок"
                android:textStyle="bold"
                android:textColor="@color/DarkBlack"
                android:textAllCaps="false"
                android:textSize="14sp"/>

            <TextView
                android:id="@+id/content_notification"
                android:layout_width="match_parent"
                android:layout_height="27.5dp"
                android:gravity="start|top"
                android:layout_margin="5dp"
                android:paddingStart="5dp"
                android:text="Пример текста"
                android:textStyle="bold"
                android:textColor="@color/DarkGray"
                android:textAllCaps="false"
                android:textSize="14sp"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>