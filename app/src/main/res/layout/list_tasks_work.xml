<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:background="@drawable/custom_block_fragment_green">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:orientation="horizontal"
        android:layout_marginBottom="15dp"
        android:background="@drawable/border_item_list_tasks_today">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/task_work_number"
                    android:layout_width="100dp"
                    android:layout_height="30dp"
                    android:gravity="center_horizontal|center_vertical"
                    android:layout_margin="5dp"
                    android:text="Задача №"
                    android:textStyle="bold|italic"
                    android:textColor="@color/DarkBlack"
                    android:textAllCaps="false"
                    android:textSize="12sp"/>

                <TextView
                    android:id="@+id/title_task_work"
                    android:layout_width="180dp"
                    android:layout_height="30dp"
                    android:paddingStart="10dp"
                    android:gravity="start|center_vertical"
                    android:layout_margin="5dp"
                    android:text="Заголовок"
                    android:textStyle="bold"
                    android:textColor="@color/DarkBlack"
                    android:textAllCaps="false"
                    android:textSize="10sp"
                    android:background="@drawable/border_item_list_tasks_today"/>

            </LinearLayout>

            <TextView
                android:id="@+id/difficult_task_work"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:paddingStart="10dp"
                android:gravity="start|center_vertical"
                android:layout_margin="5dp"
                android:text="Сложность"
                android:textStyle="bold"
                android:textColor="@color/DarkBlack"
                android:textAllCaps="false"
                android:textSize="12sp"
                android:background="@drawable/border_item_list_tasks_today"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:paddingStart="10dp"
                    android:gravity="start|center_vertical"
                    android:layout_margin="5dp"
                    android:text="От"
                    android:textStyle="bold"
                    android:textColor="@color/DarkBlack"
                    android:textAllCaps="false"
                    android:textSize="12sp"/>

                <TextView
                    android:id="@+id/date_from_task_work"
                    android:layout_width="100dp"
                    android:layout_height="30dp"
                    android:paddingStart="10dp"
                    android:gravity="start|center_vertical"
                    android:layout_margin="5dp"
                    android:text="Значение"
                    android:textStyle="bold"
                    android:textColor="@color/DarkBlack"
                    android:textAllCaps="false"
                    android:textSize="12sp"
                    android:background="@drawable/border_item_list_tasks_today"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:paddingStart="10dp"
                    android:gravity="start|center_vertical"
                    android:layout_margin="5dp"
                    android:text="до"
                    android:textStyle="bold"
                    android:textColor="@color/DarkBlack"
                    android:textAllCaps="false"
                    android:textSize="12sp"/>

                <TextView
                    android:id="@+id/date_to_task_work"
                    android:layout_width="100dp"
                    android:layout_height="30dp"
                    android:paddingStart="10dp"
                    android:gravity="start|center_vertical"
                    android:layout_margin="5dp"
                    android:text="Значение"
                    android:textStyle="bold"
                    android:textColor="@color/DarkBlack"
                    android:textAllCaps="false"
                    android:textSize="12sp"
                    android:background="@drawable/border_item_list_tasks_today"/>

            </LinearLayout>

            <TextView
                android:id="@+id/full_description_task"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:gravity="start|top"
                android:paddingTop="10dp"
                android:paddingStart="10dp"
                android:layout_margin="5dp"
                android:text="Полное описание"
                android:lines="6"
                android:textStyle="bold"
                android:textColor="@color/DarkLightGray"
                android:textAllCaps="false"
                android:textSize="10sp"
                android:background="@drawable/border_item_list_tasks_today"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>